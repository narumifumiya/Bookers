<h1>Books</h1>

<table borde="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
  </tr>
  <% @books.each do |book| %>
  <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td>Edit</td>
      <td>Destroy</td>
  </tr>
  <% end %>
</table>

  
<% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
<% end %>
