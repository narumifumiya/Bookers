<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  <label for="title">Title</label>
  <div><%= f.text_field :title %></div>
  
  <label for="body">Body</label>
  <div><%= f.text_field :body %></div>
  
  <%= f.submit 'Update Book' %>
    
<% end %>